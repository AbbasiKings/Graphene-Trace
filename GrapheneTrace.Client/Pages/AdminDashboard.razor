@page "/admin/dashboard"
@using GrapheneTrace.Client.Services
@using GrapheneTrace.Core.Enums
@inject AuthService AuthService

<PageTitle>Admin Dashboard</PageTitle>

<div class="container-fluid p-4">
    <h1 class="mb-4">Admin Dashboard</h1>

    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Welcome, @AuthService.UserName!</h5>
                    <p class="card-text">You are logged in as <strong>@AuthService.Role</strong></p>
                    <p class="card-text">Email: @AuthService.UserEmail</p>
                </div>
            </div>
        </div>
    </div>
</div>

