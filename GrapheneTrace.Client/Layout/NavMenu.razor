@using Microsoft.AspNetCore.Components
@using GrapheneTrace.Core.Enums

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">GrapheneTrace.Client</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable">
    <nav class="flex-column">
        @if (Role == UserRole.Admin)
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="/admin/dashboard" Match="NavLinkMatch.Prefix">
                    <MudIcon Icon="@Icons.Material.Filled.Dashboard" Size="Size.Small" Class="me-2" /> Admin Dashboard
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="/admin/users" Match="NavLinkMatch.Prefix">
                    <MudIcon Icon="@Icons.Material.Filled.Group" Size="Size.Small" Class="me-2" /> User Management
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="/admin/configuration" Match="NavLinkMatch.Prefix">
                    <MudIcon Icon="@Icons.Material.Filled.Settings" Size="Size.Small" Class="me-2" /> System Configuration
                </NavLink>
            </div>
        }
        @* Clinician and Patient navigation removed for now; only Admin panel is active. *@
    </nav>
</div>

@code {
    [Parameter] public UserRole? Role { get; set; }

    private bool collapseNavMenu = false;
    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
