@using Microsoft.AspNetCore.Components
@using GrapheneTrace.Core.Enums

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">GrapheneTrace.Client</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable">
    <nav class="flex-column">
        @if (Role == UserRole.Admin)
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="/admin/dashboard" Match="NavLinkMatch.Prefix">
                    <MudIcon Icon="@Icons.Material.Filled.Dashboard" Size="Size.Small" Class="me-2" /> Admin Dashboard
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="/admin/users" Match="NavLinkMatch.Prefix">
                    <MudIcon Icon="@Icons.Material.Filled.Group" Size="Size.Small" Class="me-2" /> User Management
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="/admin/configuration" Match="NavLinkMatch.Prefix">
                    <MudIcon Icon="@Icons.Material.Filled.Settings" Size="Size.Small" Class="me-2" /> System Configuration
                </NavLink>
            </div>
        }
        else if (Role == UserRole.Clinician)
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="/clinician/dashboard" Match="NavLinkMatch.Prefix">
                    <MudIcon Icon="@Icons.Material.Filled.MonitorHeart" Size="Size.Small" Class="me-2" /> Triage Dashboard
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="/clinician/patients" Match="NavLinkMatch.Prefix">
                    <MudIcon Icon="@Icons.Material.Filled.PeopleAlt" Size="Size.Small" Class="me-2" /> Patient Directory
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="/clinician/patient-analysis" Match="NavLinkMatch.Prefix">
                    <MudIcon Icon="@Icons.Material.Filled.Insights" Size="Size.Small" Class="me-2" /> Patient Analysis
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="/clinician/alerts" Match="NavLinkMatch.Prefix">
                    <MudIcon Icon="@Icons.Material.Filled.NotificationsActive" Size="Size.Small" Class="me-2" /> Alerts & Events
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="/clinician/messaging" Match="NavLinkMatch.Prefix">
                    <MudIcon Icon="@Icons.Material.Filled.Chat" Size="Size.Small" Class="me-2" /> Communication
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="/clinician/reports" Match="NavLinkMatch.Prefix">
                    <MudIcon Icon="@Icons.Material.Filled.Assessment" Size="Size.Small" Class="me-2" /> Reporting & Exports
                </NavLink>
            </div>
        }
        else if (Role == UserRole.Patient)
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="/patient/dashboard" Match="NavLinkMatch.Prefix">
                    <MudIcon Icon="@Icons.Material.Filled.Favorite" Size="Size.Small" Class="me-2" /> Patient Dashboard
                </NavLink>
            </div>
        }
    </nav>
</div>

@code {
    [Parameter] public UserRole? Role { get; set; }

    private bool collapseNavMenu = false;
    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
