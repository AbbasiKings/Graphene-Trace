@using Microsoft.AspNetCore.Components
@using GrapheneTrace.Core.Enums

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">GrapheneTrace.Client</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        @if (Role == UserRole.Admin)
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="/admin/dashboard" Match="NavLinkMatch.Prefix">
                    <span class="bi bi-speedometer2" aria-hidden="true"></span> Admin Dashboard
                </NavLink>
            </div>
        }
        else if (Role == UserRole.Clinician)
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="/clinician/dashboard" Match="NavLinkMatch.Prefix">
                    <span class="bi bi-clipboard2-pulse" aria-hidden="true"></span> Clinician Dashboard
                </NavLink>
            </div>
        }
        else if (Role == UserRole.Patient)
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="/patient/dashboard" Match="NavLinkMatch.Prefix">
                    <span class="bi bi-heart-pulse" aria-hidden="true"></span> Patient Dashboard
                </NavLink>
            </div>
        }
    </nav>
</div>

@code {
    [Parameter] public UserRole? Role { get; set; }

    private bool collapseNavMenu = true;
    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
